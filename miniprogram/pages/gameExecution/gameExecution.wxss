/* 游戏执行页面样式 */
.page-content {
  padding: 16px 16px 70px;
}

/* 游戏信息 */
.game-header {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
}

.game-title {
  font-size: 22px;
  font-weight: 700;
  color: #333333;
  margin-bottom: 10px;
}

.game-description {
  font-size: 14px;
  color: #666666;
  line-height: 1.5;
  margin-bottom: 16px;
}

.game-tags {
  display: flex;
  flex-wrap: wrap;
}

/* 材料和步骤通用样式 */
.section {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 16px;
}

.section-title {
  font-size: 16px;
  font-weight: 700;
  color: #333333;
  margin-bottom: 16px;
  position: relative;
}

.section-title::before {
  content: "";
  position: absolute;
  left: -10px;
  top: 50%;
  transform: translateY(-50%);
  width: 4px;
  height: 16px;
  background-color: #FF9F29;
  border-radius: 2px;
}

/* 材料列表 */
.materials-list {
  display: flex;
  flex-direction: column;
}

.material-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.material-icon {
  margin-right: 10px;
  font-size: 16px;
}

.material-text {
  font-size: 14px;
  color: #333333;
}

/* 步骤列表 */
.steps-list {
  display: flex;
  flex-direction: column;
}

.step-item {
  display: flex;
  margin-bottom: 16px;
}

.step-number {
  width: 24px;
  height: 24px;
  background-color: #FF9F29;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-weight: 700;
  margin-right: 12px;
  flex-shrink: 0;
}

.step-content {
  font-size: 14px;
  color: #333333;
  line-height: 1.5;
  padding-top: 2px;
}

/* 操作按钮 */
.actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.action-btn {
  width: 48%;
  height: 44px;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
}

.action-btn::after {
  border: none;
}

.save-btn {
  background-color: #FFF3E0;
  color: #FF9F29;
}

.share-btn {
  background-color: #FF9F29;
  color: white;
}

.btn-icon {
  margin-right: 6px;
  font-size: 16px;
}

/* 返回按钮 */
.back-container {
  padding: 0 20px;
}

.back-btn {
  width: 100%;
  height: 44px;
  background-color: #F5F5F5;
  color: #666666;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
}

.back-btn::after {
  border: none;
} 
/* 我的游戏页面样式 */
.page-content {
  padding: 16px 16px 70px;
}

/* 页面标题 */
.page-header {
  margin-bottom: 20px;
}

.page-title {
  font-size: 22px;
  font-weight: 700;
  color: #333333;
  margin-bottom: 4px;
  display: block;
}

.page-subtitle {
  font-size: 14px;
  color: #999999;
  display: block;
}

/* 游戏列表 */
.games-list {
  display: flex;
  flex-direction: column;
}

.game-card {
  background-color: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 16px;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.game-info {
  flex: 1;
  padding-right: 10px;
}

.game-title {
  font-size: 16px;
  font-weight: 700;
  color: #333333;
  margin-bottom: 8px;
}

.game-description {
  font-size: 12px;
  color: #666666;
  margin-bottom: 12px;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.game-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  background-color: #F5F5F5;
  border-radius: 12px;
  padding: 2px 8px;
  font-size: 10px;
  margin-right: 6px;
  margin-bottom: 6px;
  color: #666666;
}

/* 游戏操作 */
.game-actions {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.action-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 8px;
}

.delete-btn {
  background-color: #FFEBEE;
  color: #F44336;
}

.share-btn {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.btn-icon {
  font-size: 18px;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60px 0;
}

.empty-icon {
  font-size: 60px;
  margin-bottom: 20px;
}

.empty-text {
  font-size: 16px;
  color: #999999;
  margin-bottom: 30px;
}

.primary-btn {
  background-color: #FF9F29;
  color: white;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 500;
  padding: 0 30px;
  height: 44px;
  line-height: 44px;
}

.primary-btn::after {
  border: none;
} 
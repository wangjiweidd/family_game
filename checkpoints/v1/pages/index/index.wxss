/**index.wxss**/
.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 20rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #6A5ACD;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  display: block;
  font-size: 30rpx;
  margin-bottom: 16rpx;
  color: #333;
}

.picker {
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
}

.btn-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.btn-primary {
  width: 80%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
}

.tip-text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #999;
} 